{
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ],
    "buildCommand": "yarn install --legacy-peer-deps && yarn build --prefix client && yarn install --prefix backend --legacy-peer-deps"
  }
  